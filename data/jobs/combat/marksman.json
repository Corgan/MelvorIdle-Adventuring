{
	"$schema": "../job_schema.json",
	"namespace": "adventuring",
	"packages": {
		"combat_jobs": {
			"jobs": {
				"marksman": {
					"name": "Marksman",
					"tier": 5,
					"media": "assets/jobs/marksman.png",
					"requirements": [
						{ "type": "job_level", "job": "adventuring:sniper", "level": 30 },
						{ "type": "job_level", "job": "adventuring:hunter", "level": 25 }
					],
					"abilities": [
						{
							"id": "deadeye_shot",
							"name": "Deadeye Shot",
							"type": "generator",
							"media": "assets/abilities/generator.png",
							"description": "A shot that never misses, targeting the weakest enemy.",
							"energy": 25,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 1 }],
							"hits": [{ "target": "lowest", "party": "enemy", "effects": [
								{ "type": "damage_flat", "ignoreEvasion": true, "amount": { "base": 12, "scaling": [{ "id": "adventuring:agility", "amount": 0.55 }] } }
							] }]
						},
						{
							"id": "perfect_shot",
							"name": "Perfect Shot",
							"type": "spender",
							"media": "assets/abilities/spender.png",
							"description": "The perfect shot that executes low health targets.",
							"cost": 140,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 1 }],
							"hits": [{ "target": "lowest", "party": "enemy", "effects": [
								{ "type": "damage_flat", "executeThreshold": 0.2, "amount": { "base": 28, "scaling": [{ "id": "adventuring:agility", "amount": 1.3 }] } }
							] }]
						},
						{
							"id": "vital_strike",
							"name": "Vital Strike",
							"type": "generator",
							"media": "assets/abilities/generator.png",
							"description": "Strikes vital points, dealing bonus damage to marked targets.",
							"energy": 25,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 10 }],
							"hits": [{ "target": "back", "party": "enemy", "effects": [
								{ "type": "damage_flat", "bonusVsDebuff": { "id": "adventuring:marked", "multiplier": 1.5 }, "amount": { "base": 11, "scaling": [{ "id": "adventuring:agility", "amount": 0.5 }] } }
							] }]
						},
						{
							"id": "headhunter",
							"name": "Headhunter",
							"type": "spender",
							"media": "assets/abilities/spender.png",
							"description": "Marks and exposes the back row enemy.",
							"cost": 145,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 15 }],
							"hits": [{ "target": "back", "party": "enemy", "effects": [
								{ "type": "damage_flat", "amount": { "base": 20, "scaling": [{ "id": "adventuring:agility", "amount": 0.9 }] } },
								{ "type": "debuff", "id": "adventuring:marked", "stacks": { "base": 5, "scaling": [{ "id": "adventuring:agility", "amount": 0.15 }] } },
								{ "type": "debuff", "id": "adventuring:vulnerable", "stacks": { "base": 4, "scaling": [{ "id": "adventuring:agility", "amount": 0.1 }] } }
							] }]
						},
						{
							"id": "steady_hands",
							"name": "Steady Hands",
							"type": "passive",
							"media": "assets/abilities/passive.png",
							"description": "Your steady hands grant precision at combat start.",
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 20 }],
							"effects": [
								{ "trigger": "encounter_start", "type": "buff", "target": "self", "id": "adventuring:precision", "stacks": { "base": 5, "scaling": [{ "id": "adventuring:agility", "amount": 0.15 }] } }
							]
						},
						{
							"id": "perfect_aim",
							"name": "Perfect Aim",
							"type": "generator",
							"media": "assets/abilities/generator.png",
							"description": "Perfect aim guarantees critical hits on all enemies.",
							"energy": 30,
							"requirements": [{ "type": "job_level", "job": "adventuring:marksman", "level": 25 }],
							"hits": [{ "target": "all", "party": "enemy", "effects": [
								{ "type": "damage_flat", "guaranteedCrit": true, "amount": { "base": 18, "scaling": [{ "id": "adventuring:agility", "amount": 0.85 }] } }
							] }]
						},
						{
							"id": "no_escape",
							"name": "No Escape",
							"type": "passive",
							"media": "assets/abilities/passive.png",
							"description": "Killing an enemy grants haste and energy.",
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 40 }],
							"effects": [
								{ "trigger": "kill", "type": "buff", "target": "self", "id": "adventuring:haste", "stacks": 4 },
								{ "trigger": "kill", "type": "energy", "target": "self", "amount": 15 }
							]
						},
						{
							"id": "execution_volley",
							"name": "Execution Volley",
							"type": "spender",
							"media": "assets/abilities/spender.png",
							"description": "A rapid volley targeting the weakest, executing low health enemies.",
							"cost": 180,
							"requirements": [{ "type": "job_level", "job": "adventuring:marksman", "level": 50 }],
							"hits": [{ "target": "lowest", "party": "enemy", "delay": 80, "repeat": 5, "effects": [
								{ "type": "damage_flat", "executeThreshold": 0.2, "amount": { "base": 12, "scaling": [{ "id": "adventuring:agility", "amount": 0.5 }] } }
							] }]
						},
						{
							"id": "snipers_mark",
							"name": "Sniper's Mark",
							"type": "generator",
							"media": "assets/abilities/generator.png",
							"description": "Marks and exposes the target completely.",
							"energy": 35,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 60 }],
							"hits": [{ "target": "front", "party": "enemy", "effects": [
								{ "type": "damage_flat", "amount": { "base": 22, "scaling": [{ "id": "adventuring:agility", "amount": 0.9 }] } },
								{ "type": "debuff", "id": "adventuring:marked", "stacks": { "base": 5, "scaling": [{ "id": "adventuring:agility", "amount": 0.15 }] } },
								{ "type": "debuff", "id": "adventuring:vulnerable", "stacks": { "base": 5, "scaling": [{ "id": "adventuring:agility", "amount": 0.15 }] } }
							] }]
						},
						{
							"id": "killshot",
							"name": "Killshot",
							"type": "spender",
							"media": "assets/abilities/spender.png",
							"description": "The ultimate killshot, consuming marks for massive damage.",
							"cost": 170,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 70 }],
							"hits": [{ "target": "lowest", "party": "enemy", "effects": [
								{ "type": "damage_flat", "executeThreshold": 0.3, "amount": { "base": 40, "scaling": [
									{ "id": "adventuring:agility", "amount": 1.5 },
									{ "id": "adventuring:marked", "scaleFrom": "debuff", "scaleTarget": "target", "amount": 8, "consume": true }
								] } }
							] }]
						},
						{
							"id": "deadly_precision",
							"name": "Deadly Precision",
							"type": "passive",
							"media": "assets/abilities/passive.png",
							"description": "Critical hits enhance your precision and speed.",
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 80 }],
							"effects": [
								{ "trigger": "crit", "type": "buff", "target": "self", "id": "adventuring:precision", "stacks": 3 },
								{ "trigger": "crit", "type": "buff", "target": "self", "id": "adventuring:haste", "stacks": 2 }
							]
						},
						{
							"id": "annihilation",
							"name": "Annihilation",
							"type": "generator",
							"media": "assets/abilities/generator.png",
							"description": "Marks all enemies for annihilation.",
							"energy": 40,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 90 }],
							"hits": [{ "target": "all", "party": "enemy", "effects": [
								{ "type": "damage_flat", "amount": { "base": 18, "scaling": [{ "id": "adventuring:agility", "amount": 0.8 }] } },
								{ "type": "debuff", "id": "adventuring:marked", "stacks": { "base": 4, "scaling": [{ "id": "adventuring:agility", "amount": 0.15 }] } }
							] }]
						},
						{
							"id": "ultimate_precision",
							"name": "Ultimate Precision",
							"type": "spender",
							"media": "assets/abilities/spender.png",
							"description": "The ultimate display of precision - six perfect shots consuming all marks.",
							"cost": 240,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:marksman", "level": 99 }],
							"hits": [{ "target": "all", "party": "enemy", "delay": 60, "repeat": 6, "effects": [
								{ "type": "damage_flat", "guaranteedCrit": true, "amount": { "base": 20, "scaling": [
									{ "id": "adventuring:agility", "amount": 0.9 },
									{ "id": "adventuring:marked", "scaleFrom": "debuff", "scaleTarget": "target", "amount": 5, "consume": true }
								] } }
							] }]
						}
					]
				}
			}
		}
	}
}
