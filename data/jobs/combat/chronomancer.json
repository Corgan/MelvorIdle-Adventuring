								{ "type": "damage_flat", "amount": { "base": 22, "scaling": [{ "id": "adventuring:magic", "amount": 0.8 }] } },
								{ "type": "debuff", "id": "adventuring:stun", "stacks": { "base": 5, "scaling": [{ "id": "adventuring:magic", "amount": 0.15 }] } },
								{ "type": "debuff", "id": "adventuring:chill", "stacks": 5 }
							] }]
						},
						{
							"id": "chrono_shift",
							"name": "Chrono Shift",
							"type": "passive",
							"media": "assets/abilities/passive.png",
							"description": "Your attacks occasionally freeze targets in time.",
							"requirements": [{ "type": "current_job_level", "job": "adventuring:chronomancer", "level": 80 }],
							"effects": [
								{ "trigger": "after_damage_delivered", "type": "debuff", "target": "target", "id": "adventuring:stun", "stacks": 1, "condition": { "type": "chance", "value": 50 } }
							]
						},
						{
							"id": "time_crush",
							"name": "Time Crush",
							"type": "generator",
							"media": "assets/abilities/generator.png",
							"description": "Crushes all enemies with temporal force.",
							"energy": 40,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:chronomancer", "level": 90 }],
							"hits": [{ "target": "all", "party": "enemy", "effects": [
								{ "type": "damage_flat", "amount": { "base": 14, "scaling": [{ "id": "adventuring:magic", "amount": 0.6 }] } },
								{ "type": "debuff", "id": "adventuring:chill", "stacks": 5 },
								{ "type": "debuff", "id": "adventuring:weaken", "stacks": 4 }
							] }]
						},
						{
							"id": "temporal_annihilation",
							"name": "Temporal Annihilation",
							"type": "spender",
							"media": "assets/abilities/spender.png",
							"description": "Shatters the timeline, consuming frozen time for devastating damage.",
							"cost": 240,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:chronomancer", "level": 99 }],
							"hits": [
								{ "target": "all", "party": "enemy", "delay": 150, "repeat": 3, "effects": [
									{ "type": "damage_flat", "amount": { "base": 20, "scaling": [
										{ "id": "adventuring:magic", "amount": 0.8 },
										{ "id": "adventuring:chill", "scaleFrom": "debuff", "scaleTarget": "target", "amount": 5, "consume": true }
