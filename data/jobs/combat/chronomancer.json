								] },
								{ "target": "all", "party": "ally", "effects": [
									{ "type": "buff", "id": "adventuring:haste", "stacks": { "base": 8, "scaling": [{ "id": "adventuring:agility", "amount": 0.3 }] } },
									{ "type": "buff", "id": "adventuring:focus", "stacks": 5 }
								] }
							]
						}
