							"cost": 175,
							"requirements": [{ "type": "job_level", "job": "adventuring:chronomancer", "level": 50 }],
							"hits": [
								{ "target": "all", "party": "enemy", "effects": [
									{ "type": "damage_flat", "amount": { "base": 18, "scaling": [
										{ "id": "adventuring:magic", "amount": 0.7 },
										{ "id": "adventuring:agility", "amount": 0.4 }
									] } },
									{ "type": "debuff", "id": "adventuring:chill", "stacks": 4 }
								] },
								{ "target": "all", "party": "ally", "effects": [
									{ "type": "buff", "id": "adventuring:haste", "stacks": { "base": 4, "scaling": [{ "id": "adventuring:agility", "amount": 0.15 }] } }
								] }
							]
						},
						{
							"id": "accelerate",
							"name": "Accelerate",
							"type": "generator",
							"media": "assets/abilities/generator.png",
							"description": "Accelerates yourself to extreme speeds.",
							"energy": 35,
							"requirements": [{ "type": "current_job_level", "job": "adventuring:chronomancer", "level": 60 }],
							"hits": [
								{ "target": "front", "party": "enemy", "effects": [
									{ "type": "damage_flat", "amount": { "base": 14, "scaling": [{ "id": "adventuring:magic", "amount": 0.5 }] } }
								] },
								{ "target": "self", "effects": [
									{ "type": "buff", "id": "adventuring:haste", "stacks": { "base": 5, "scaling": [{ "id": "adventuring:agility", "amount": 0.15 }] } },
									{ "type": "buff", "id": "adventuring:focus", "stacks": 3 }
								] }
							]
						},
						{
							"id": "temporal_prison",
							"name": "Temporal Prison",
							"type": "spender",
							"media": "assets/abilities/spender.png",
