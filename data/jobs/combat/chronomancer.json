{
	"$schema": "../job_schema.json",
	"namespace": "adventuring",
	"packages": {
		"combat_jobs": {
			"jobs": {
				"chronomancer": {
					"name": "Chronomancer",
					"tier": 5,
					"media": "assets/jobs/chronomancer.png",
					"requirements": [
						{ "type": "job_level", "job": "adventuring:elementalist", "level": 30 },
						{ "type": "job_level", "job": "adventuring:rogue", "level": 20 }
					],
					"abilities": [
						{
							"id": "temporal_bolt",
							"name": "Temporal Bolt",
							"type": "generator",
							"media": "assets/abilities/generator.png",
