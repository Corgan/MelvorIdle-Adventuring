{
    "$schema": "https://www.melvoridle.com/assets/schema/gameData.json",
    "namespace": "adventuring",
    "data": {
        "skillData": [{
            "skillID": "adventuring:Adventuring",
            "data": {
                "tutorials": [
                    {
                        "id": "tutorial_intro",
                        "name": "Welcome to Adventuring",
                        "priority": 0,
                        "trigger": { "type": "immediate" },
                        "requiresState": "town",
                        "steps": [
                            {
                                "target": "combatJob:0",
                                "message": "Welcome to Adventuring! Your party has 4 heroes. Each hero needs a Combat Job that determines their abilities and stats. Click a hero's job slot to assign one.",
                                "position": "bottom"
                            },
                            {
                                "target": "ability:0:0",
                                "message": "Each job has Generators (build energy) and Spenders (use energy for powerful effects). Heroes use these automatically in combat. Assign abilities to each hero's two ability slots.",
                                "position": "bottom"
                            },
                            {
                                "message": "Tip: A balanced party works best! Consider mixing damage dealers (Fighter, Ranger, Wizard), tanks (Paladin), and healers (Cleric) for harder content.",
                                "position": "bottom"
                            }
                        ],
                        "chainTo": "adventuring:tutorial_dungeon"
                    },
                    {
                        "id": "tutorial_dungeon",
                        "name": "Starting an Adventure",
                        "requiresState": "town",
                        "priority": 0,
                        "trigger": { "type": "chained" },
                        "steps": [
                            {
                                "target": "page:crossroads",
                                "message": "Ready to explore! The Crossroads shows available dungeons. Each area has unique monsters, materials, and bosses. Higher level areas give better rewards but are more dangerous.",
                                "position": "bottom"
                            },
                            {
                                "target": "area:any",
                                "message": "Select an area and click 'Adventure' to begin. Your party will automatically explore, fight monsters, and collect loot. Watch the dungeon floor as your heroes progress!",
                                "position": "top"
                            }
                        ]
                    },
                    {
                        "id": "tutorial_explore",
                        "name": "Dungeon Exploration",
                        "requiresState": "dungeon",
                        "priority": 0,
                        "trigger": { 
                            "type": "event",
                            "event": "dungeonStart"
                        },
                        "steps": [
                            {
                                "target": "dungeonFloor:",
                                "message": "Your heroes explore automatically! Different tiles have effects: Monsters trigger combat, Fountains restore health, Traps deal damage, Treasures give bonus loot, and Shrines grant buffs.",
                                "position": "bottom"
                            },
                            {
                                "target": "turnProgressBar:",
                                "message": "The progress bar shows exploration timing. When your heroes encounter enemies, combat begins automatically. Clear all floors to complete the dungeon!",
                                "position": "bottom"
                            }
                        ]
                    },
                    {
                        "id": "tutorial_combat",
                        "name": "Combat System",
                        "requiresState": "dungeon",
                        "priority": 0,
                        "trigger": { 
                            "type": "event",
                            "event": "combatStart"
                        },
                        "steps": [
                            {
                                "target": "turnOrderCards:",
                                "message": "Combat is turn-based. The turn order shows who acts next - higher Agility means faster turns. Heroes automatically use their Generator to build energy, then their Spender when they have enough.",
                                "position": "bottom"
                            },
                            {
                                "target": "combatLog:",
                                "message": "The combat log shows damage, healing, buffs, and debuffs. Some abilities apply status effects that deal damage over time or boost stats. Defeat all enemies to continue exploring!",
                                "position": "left"
                            }
                        ]
                    },
                    {
                        "id": "tutorial_tavern",
                        "name": "Tavern & Drinks",
                        "priority": 20,
                        "requiresState": "town",
                        "trigger": { 
                            "type": "currency",
                            "currencyId": "currency",
                            "amount": 25
                        },
                        "steps": [
                            {
                                "target": "building:tavern",
                                "message": "The Tavern sells drinks that give your party powerful buffs! Each drink lasts for a set number of dungeon runs. Higher tier drinks are more effective but cost rare materials.",
                                "position": "top"
                            }
                        ]
                    },
                    {
                        "id": "tutorial_upgrade",
                        "name": "Equipment Upgrades",
                        "priority": 20,
                        "requiresState": "town",
                        "trigger": {
                            "type": "material",
                            "check": "anyUpgrade"
                        },
                        "steps": [
                            {
                                "target": "building:armory",
                                "message": "The Armory lets you upgrade your heroes' equipment using materials from dungeons. Each upgrade increases stats. Higher upgrade levels require rarer materials from harder areas.",
                                "position": "top"
                            }
                        ]
                    },
                    {
                        "id": "tutorial_consumables",
                        "name": "Consumables",
                        "priority": 20,
                        "requiresState": "town",
                        "trigger": {
                            "type": "material",
                            "check": "anyCraft"
                        },
                        "steps": [
                            {
                                "target": "building:supply_cache",
                                "message": "The Supply Cache lets you craft and equip consumables. These one-time use items can heal, damage enemies, or provide buffs during dungeon runs. Stock up before challenging content!",
                                "position": "top"
                            }
                        ]
                    },
                    {
                        "id": "tutorial_slayer",
                        "name": "Slayer Tasks",
                        "priority": 15,
                        "trigger": {
                            "type": "event",
                            "event": "firstMonsterSeen"
                        },
                        "requiresState": "town",
                        "steps": [
                            {
                                "target": "building:slayers",
                                "message": "The Slayer's Lodge offers bounty tasks! Accept tasks to hunt specific monsters or clear dungeons for bonus Slayer Coins. These coins unlock special rewards and the rare Slayer job.",
                                "position": "top"
                            }
                        ]
                    },
                    {
                        "id": "tutorial_mastery",
                        "name": "Mastery System",
                        "priority": 30,
                        "trigger": {
                            "type": "mastery",
                            "category": "job",
                            "level": 10
                        },
                        "requiresState": "town",
                        "steps": [
                            {
                                "target": "building:trainer",
                                "message": "Jobs gain Mastery XP as you use them! Higher mastery unlocks stat bonuses and new abilities. At Mastery 99, you can assign the same job to multiple heroes. Check the Trainer to view progress.",
                                "position": "top"
                            }
                        ]
                    },
                    {
                        "id": "tutorial_auto_run",
                        "name": "Auto-Run",
                        "priority": 25,
                        "trigger": {
                            "type": "mastery",
                            "category": "area",
                            "level": 10
                        },
                        "requiresState": "town",
                        "steps": [
                            {
                                "target": "page:crossroads",
                                "message": "You've unlocked Auto-Run! Areas with Mastery 10+ show an auto-repeat checkbox. Enable it to automatically start another run when your party finishes - perfect for idle play.",
                                "position": "bottom"
                            }
                        ]
                    },
                    {
                        "id": "tutorial_difficulty",
                        "name": "Difficulty Modes",
                        "priority": 30,
                        "trigger": {
                            "type": "mastery",
                            "category": "area",
                            "level": 25
                        },
                        "requiresState": "town",
                        "steps": [
                            {
                                "target": "page:crossroads",
                                "message": "You've unlocked Heroic difficulty! Higher difficulties have stronger enemies but give more XP and better loot. Unlock Mythic at Area Mastery 50 and Endless mode at 75 for the ultimate challenge.",
                                "position": "bottom"
                            }
                        ]
                    }
                ]
            }
        }]
    }
}
